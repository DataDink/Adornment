<Window x:Class="Adorners.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:A="clr-namespace:Adorners;assembly=Adorners"
        xmlns:L="clr-namespace:Adorners.Ui"
        Title="MainWindow" Height="282" Width="264">
    <Grid>
        <Border Background="Black">
            <Button Click="Button_Click_1" />
            <A:Adornment.Content>
                <A:AdornmentCollection>
                    <A:AdornerTemplate Type="L:GridAdornment"/>
                    <Ellipse Fill="Blue"
                             A:Adornment.Left="50"
                             A:Adornment.Right="50"
                             A:Adornment.Bottom="50"
                             A:Adornment.Top="50"/>
                </A:AdornmentCollection>
            </A:Adornment.Content>
        </Border>
    </Grid>
</Window>
